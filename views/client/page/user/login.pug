extends ../../layout/default.pug
include ../../mixins/box-head.pug
block main
  .container.my-3
    .row
      .col-6.mx-auto
        +box-head(pageTitle)

        form(
          action="/user/login?_method=PATCH"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu 
            input(
              type="password"
              class="form-control password-toggle"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            input(type="checkbox" 
                  id="password-toggle"
            ) 
            label(for="password-toggle") Hiển thị mật khẩu
          div(class="form-group")
            a(href="/user/password/forgot") Quên mật khẩu 
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Đăng nhập